        <Grid
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="226" />
                <ColumnDefinition Width="226" />
                <ColumnDefinition Width="226" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                HorizontalAlignment="Center"
                FontSize="18"
                Text="Training Program Selection"
                Foreground="White" />
            <ComboBox Template="{DynamicResource DropdownTemplate}"
                Grid.Row="1"
                Grid.Column="1"
                ItemsSource="{Binding Products}"
                SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
                Foreground="White"
                FontFamily="Segoe UI"
                FontWeight="Bold"
                FontSize="14"
                DisplayMemberPath="Name"
                Background="{StaticResource DarkBlue}"
                BorderBrush="{StaticResource LightBlue}"
                BorderThickness="1"
                HorizontalAlignment="Stretch" />
            <Button
                x:Name="BtnReport"
                Grid.Row="2"
                Grid.Column="0"
                IsEnabled="{Binding SelectedProduct, Converter={StaticResource ObjectToBoolConverter}}"
                Command="{Binding ReportCommand}"
                Style="{StaticResource ImageButtonStyle}">
                <StackPanel
                    Style="{StaticResource ButtonStackStyle}">
                    <!--<Image                        
                        Style="{StaticResource ButtonImageStyle}"
                        Source="/Images/Reports.png" />-->
                    <TextBlock
                        Style="{StaticResource ButtonIconTextStyle}"
                        Text="" />
                    <TextBlock
                        Style="{StaticResource ButtonTextStyle}"
                        Text="Reports" />
                </StackPanel>
            </Button>
            <Button
                Grid.Row="2"
                Grid.Column="1"
                IsEnabled="{Binding SelectedProduct, Converter={StaticResource ObjectToBoolConverter}}"
                Command="{Binding ManageCommand}"
                Style="{StaticResource ImageButtonStyle}">
                <StackPanel
                    Style="{StaticResource ButtonStackStyle}">
                    <!--<Image
                        Style="{StaticResource ButtonImageStyle}"
                        Source="/Images/Manage.png" />-->
                    <TextBlock
                        Style="{StaticResource ButtonIconTextStyle}"
                        Text="" />
                    <TextBlock
                        Style="{StaticResource ButtonTextStyle}"
                        Text="Manage" />
                </StackPanel>
            </Button>
            <Button
                Grid.Row="2"
                Grid.Column="2"
                IsEnabled="{Binding SelectedProduct, Converter={StaticResource ObjectToBoolConverter}}"
                Command="{Binding SystemCommand}"
                Style="{StaticResource ImageButtonStyle}">
                <StackPanel Style="{StaticResource ButtonStackStyle}">
                    <!--<Image
                        Style="{StaticResource ButtonImageStyle}"
                        Source="/Images/Settings.png" />-->
                    <TextBlock
                        Style="{StaticResource ButtonIconTextStyle}"
                        Text="" />
                    <TextBlock
                        Style="{StaticResource ButtonTextStyle}"
                        Text="System" />
                </StackPanel>
            </Button>
